<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fab_large_margin">


    <AutoCompleteTextView
        android:id="@+id/contect_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/fab_large_margin"
        android:hint="@string/loading"
        android:completionThreshold="1" />

    <CheckBox
        android:id="@+id/include_location_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contect_editText"
        android:layout_marginTop="@dimen/fab_large_margin"
        android:buttonTint="@android:color/darker_gray"
        android:text="@string/include_your_location" />

    <CheckBox
        android:id="@+id/start_service_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include_location_checkBox"
        android:layout_marginTop="@dimen/fab_large_margin"
        android:buttonTint="@android:color/darker_gray"
        android:text="@string/start_using_this_service" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:id="@+id/start_service_editText"
        android:layout_below="@+id/start_service_checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/type_sms_to_send"
        android:layout_marginTop="@dimen/fab_large_margin" />


</RelativeLayout>